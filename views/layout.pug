doctype html
html
  head
    title Contacts
    meta(name="viewport" content="width=device-width,initial-scale=1")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"  )
    script(src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js" )
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')

    style.
        /* For the hover effect */ 
        .btn-hover-transform:hover {
            transform: scale(1.1);
            transition: transform .2s; 
        }
    
        .pitch-black { background-color: #000000; } /* Custom class for pitch-black background */
        .btn-custom { background-color: #212529; color: white; border-color: #212529; } /* Custom button styling for better visibility */
        .center-links { display: flex; justify-content: center; flex-wrap: wrap; gap: 10px; }
    body(class="bg-dark text-white")
        .container.pitch-black
          .row.align-items-center
            .col
              h1.text-center Contact List
            .col-auto
            .col-12.center-links
              if !hide_login
                a.btn.btn-primary.me-5(style="background-color: #212529; border-color: #212529;" href="/create", role="button") Create a new contact
                |  
                a.btn.btn-primary.me-5(style="background-color: #212529; border-color: #212529;" href="/", role="button") Home
                | 
                if user
                  span.navbar-text Signed in as:  #{user.username}
                  i 
                    i    
                      a(href='/logout').btn.btn-light.btn-hover-transform Sign out
                else
                  a(href='/login').btn.btn-primary(style="background-color: #212529; border-color: #212529;") Sign in
          br
        block content

